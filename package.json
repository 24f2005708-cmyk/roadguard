{
  "name": "roadguard",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently --kill-others-on-fail --silent \"npm run backend\" \"npm run frontend\"",
    "install": "cd frontend && npm install && cd ../backend && npm install && cd ..",
    "frontend": "cd frontend && npm run dev",
    "backend": "cd backend && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}